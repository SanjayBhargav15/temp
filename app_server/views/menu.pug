extends layout

include _includes/sharedHTMLfunctions

block content
  .container
    .row.banner
      .col-12.col-md-8
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
    .row
      each dish in dishes
        .col-md-6
          .card.mb-4
            .card-body
              h4.card-title
                a(href='/menu')= dish.name
                small &nbsp;
                  +outputRating(dish.rating)
              a(href='/menu')
                img.card-img-top(src=dish.image, alt=dish.name)
              p.card-text= dish.description
              p.card-text Price: â‚¹#{dish.price}
              p.card-text Category: #{dish.category}
      .col-md-6
        p.lead= sidebarContent

